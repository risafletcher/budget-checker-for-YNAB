{
    "name": "Budget Checker for YNAB",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Review your budget before making a purchase.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}